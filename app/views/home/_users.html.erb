<br>
<% @users.each do |user| %>
  <div class="mdl-card user-card">
    <div class="user-card">
      <% if user.avatar.url %>
        <%= image_tag user.avatar.url, class: "card-image-top" %>
      <% end %>
      <div class="card-body">
        <div class="card-text"><%= user.username %></div>
        <%= render partial: 'users/follow_form', locals: { user: user} %>
        <%= render partial: 'users/stats', locals: { user: user } %>
      </div>
    </div>
  </div>
  <br />
<% end %>
