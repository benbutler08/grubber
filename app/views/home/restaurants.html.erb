<% @restaurants.each do |restaurant| %>
  <div class="container">
    <div class="card">
      <%= image_tag restaurant.restaurant_pic.url, class: "card-img-top" %>
      <div class="card-body">
        <h5 class="card-title"><%= restaurant.name %></h5>
        <p class="card-text">
          <%= restaurant.location %>
          <!--  follower's ratings and reviews-->
        </p>
      </div>
    </div>
  </div>
<% end %>
