<%= form_with(model: rating, local: true) do |form| %>
  <% if rating.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(rating.errors.count, "error") %> prohibited this rating from being saved:</h2>

      <ul>
      <% rating.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :rating_title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :score %>
    <%= form.number_field :score, id: :rating_score, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, id: :rating_description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :restaurant_id %>
    <%= form.number_field :restaurant_id, id: :rating_restaurant_id, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :user_id %>
    <% form.hidden_field :user_id, value: current_user.id, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary'%>
  </div>
<% end %>
