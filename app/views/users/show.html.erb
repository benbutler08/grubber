<br>
<div class="card">
	<div class="user-card">
		<% if @user.avatar.url %>
			<%= image_tag @user.avatar.url, class: "card-image-top" %>
		<% end %>
		<div class="card-body">
			<p class="card-text"><%= @user.username %><br></p>
		</div>
			<%= render partial: 'users/follow_form', locals: { user: @user} %>
			<%= render 'users/stats', locals: { user: @user } %>
	</div>
</div>
