<div class="container">
  <div class="row">
    <div class="user_info">
      <h4><%= @user.email %></h4>
      <%= link_to "view my profile", @user %>
      <%= render 'layouts/stats' %>
    </div>
  </div>
  <br>
  <br>
  <div class="row">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
    <% end %>
  </div>
</div>
