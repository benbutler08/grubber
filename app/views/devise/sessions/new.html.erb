<ul class="mdl-list">

      <div class="mdl-list__item mdl-list__heading">
        <h4>Sign In</h4>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <li class="mdl-list__item">
        <div class="mdl-textfield mdl-js-textfield">
          <span class="mdl-list__item-primary-content">
            <i class="material-icons form-icon">mail_outline</i>
            <%= f.label :email, class: 'mdl-textfield__label' %>
            <span class="mdl-list__item-text-body">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'mdl-textfield__input' %>
            </span>
          </span>
        </div>
      </li>

      <li class="mdl-list__item">
        <div class="mdl-textfield mdl-js-textfield">
          <span class="mdl-list__item-primary-content">
            <i class="material-icons form-icon">lock</i>
            <%= f.label :password, class: 'mdl-textfield__label' %>
            <span class="mdl-list__item-text-body">
              <%= f.password_field :password, autocomplete: "off", class: 'mdl-textfield__input' %>
            </span>
          </span>
        </div>
      </li>

      <% if devise_mapping.rememberable? -%>
      <li class="mdl-list__item">
        <%= f.check_box :remember_me%>
        <%= f.label :remember_me %>
      </li>
      <% end -%>

      <li class="mdl-list__item">
        <%= f.submit "Log in", class: 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored'%>
        <%= render "devise/shared/links" %>
      </li>


      <% end %>

      <li class="mdl-list__item">

      </li>

</ul>
